<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/mobile_navigation.xml"
    app:startDestination="@id/navigation_home">

    <fragment
        android:id="@+id/navigation_home"
        android:name="com.example.parus.ui.home.HomeFragment"
        android:label="HomeFragment"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_navigation_home_to_remindersActivity"
            app:destination="@id/remindersActivity" />
    </fragment>
    <fragment
        android:id="@+id/navigation_communication"
        android:name="com.example.parus.ui.communication.CommunicationFragment"
        android:label="CommunicationFragment"
        tools:layout="@layout/fragment_communication"/>
    <fragment
        android:id="@+id/navigation_account"
        android:name="com.example.parus.ui.account.AccountFragment"
        android:label="fragment_account"
        tools:layout="@layout/fragment_account" />
    <fragment
        android:id="@+id/navigation_chat"
        android:name="com.example.parus.ui.chat.ChatFragment"
        android:label="fragment_chat"
        tools:layout="@layout/fragment_chat" />
    <activity
        android:id="@+id/remindersActivity"
        android:name="com.example.parus.ui.home.reminder.RemindersActivity"
        android:label="RemindersActivity" />
</navigation>