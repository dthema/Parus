<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/Primary</item>
        <item name="colorPrimaryDark">@color/PrimaryDark</item>
        <item name="windowNoTitle">false</item>
    </style>

    <style name="AppTheme.FullScreen" parent="@style/AppTheme">
        <item name="windowNoTitle">true</item>
    </style>

    <style name="RoundedCommunicationButton" parent="Widget.AppCompat.Button.Borderless">
        <item name="android:background">@drawable/circle_btn</item>
    </style>

    <style name="Theme2" parent="AppTheme">
        <item name="colorPrimary">@color/PrimaryDark</item>
        <item name="colorAccent">@color/PrimaryDark</item>
    </style>
</resources>
