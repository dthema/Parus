<?xml version="1.0" encoding="utf-8"?>
<layout>

    <data>

    </data>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="horizontal"
        android:weightSum="3">

        <Button
            android:id="@+id/buttonToSee"
            style="@style/RoundedCommunicationButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="8dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_eye"
            android:drawablePadding="-10dp"
            android:paddingTop="10dp"
            android:text="@string/see"
            android:textAllCaps="false"
            android:textSize="25sp" />

        <Button
            android:id="@+id/buttonToListen"
            style="@style/RoundedCommunicationButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginRight="8dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_hearing_black_24dp"
            android:drawablePadding="-10dp"
            android:paddingTop="10dp"
            android:text="@string/listen"
            android:textAllCaps="false"
            android:textSize="25sp" />

        <Button
            android:id="@+id/buttonToSay"
            style="@style/RoundedCommunicationButton"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginStart="8dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="16dp"
            android:layout_weight="1"
            android:drawableTop="@drawable/ic_audio"
            android:drawablePadding="-10dp"
            android:paddingTop="10dp"
            android:text="@string/say"
            android:textAllCaps="false"
            android:textSize="25sp" />
    </LinearLayout>
</layout>