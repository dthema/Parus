<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.account.AccountFragment"
    android:orientation="vertical"
    android:weightSum="1">
    <ImageButton
        android:id="@+id/btnExitAccount"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginEnd="20dp"
        android:layout_marginTop="10dp"
        android:background="@drawable/btn_link_location"
        app:srcCompat="@drawable/ic_input_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:contentDescription="Выход из аккаунта"/>
    <ImageButton
        android:id="@+id/accountSettings"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:background="@drawable/btn_link_location"
        app:srcCompat="@drawable/ic_settings_black_24dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="120dp"
        android:layout_marginTop="10dp"
        android:contentDescription="Настройки аккаунта"/>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:orientation="vertical"
        android:layout_marginTop="40dp">
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ваше Имя:"
            android:textSize="17sp"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/ic_account"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/infoName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Глеб"
            android:textSize="20sp"
            android:layout_marginStart="55dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000" />
        <TextView
            android:layout_marginTop="30dp"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Ваш ID:"
            android:textSize="17sp"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/ic_menu_share"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/infoId"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Zia5bE5F9uSt7ugq0fidrKJuR2q1"
            android:textSize="20sp"
            android:layout_marginStart="55dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000" />
        <TextView
            android:layout_marginTop="30dp"
            android:id="@+id/infoLinkNameLabel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Имя помощника:"
            android:textSize="17sp"
            android:drawablePadding="20dp"
            android:drawableStart="@drawable/ic_people_black_24dp"
            android:layout_marginLeft="10dp"/>
        <TextView
            android:layout_marginTop="10dp"
            android:id="@+id/infoLinkName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Вася"
            android:textSize="20sp"
            android:layout_marginStart="55dp"
            android:layout_marginLeft="10dp"
            android:textColor="#000" />

        <Button
            android:visibility="gone"
            android:id="@+id/accountInfo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Информация об аккаунте"
            android:backgroundTint="@color/white"
            android:textAllCaps="false"/>
        <Button
            android:id="@+id/accountLink"
            android:layout_width="200dp"
            android:layout_height="wrap_content"
            android:text="Разорвать связь"
            android:textSize="17sp"
            android:layout_marginTop="10dp"
            android:layout_marginStart="50dp"
            android:layout_marginEnd="10dp"
            style="@style/RoundedCommunicationButton"
            android:textAllCaps="false"/>

    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="100dp">

    </LinearLayout>

</RelativeLayout>