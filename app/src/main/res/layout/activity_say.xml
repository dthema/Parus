<?xml version="1.0" encoding="utf-8"?>
<layout>

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:weightSum="1"
        tools:context=".ui.communication.say.SayActivity">


        <EditText
            android:id="@+id/editSayText"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.1"
            android:ems="10"
            android:gravity="start|top"
            android:hint="Введите текст"
            android:maxLines="3" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.08"
            android:gravity="end"
            android:weightSum="1">

            <Button
                android:id="@+id/btnShow"
                style="@style/RoundedCommunicationButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginRight="50sp"
                android:layout_weight="0.4"
                android:text="Показать"
                android:textAllCaps="false"
                android:textSize="18sp" />

            <Button
                android:id="@+id/btnSay"
                style="@style/RoundedCommunicationButton"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_gravity="end"
                android:layout_marginRight="50sp"
                android:layout_weight="0.45"
                android:text="Сказать"
                android:textAllCaps="false"
                android:textSize="18sp" />

        </LinearLayout>

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5sp"
            android:layout_weight="0.05"
            android:text="Частые фразы:"
            android:textColor="#000"
            android:textSize="20sp" />

        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_marginLeft="5sp"
            android:layout_marginBottom="10sp"
            android:layout_weight="0.1"
            android:baselineAligned="false">

            <LinearLayout
                android:id="@+id/oftenWordLayout"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:orientation="horizontal">

            </LinearLayout>
        </HorizontalScrollView>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.67"
            android:orientation="vertical"
            android:weightSum="1">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_marginLeft="5sp"
                android:layout_weight="0.18"
                android:orientation="horizontal"
                android:weightSum="1">

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.35"
                    android:orientation="vertical"
                    android:weightSum="1">

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Коллекции:"
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <Button
                            android:id="@+id/btnAddSayCollection"
                            android:layout_width="60sp"
                            android:layout_height="wrap_content"
                            android:background="#9F37D71B"
                            android:contentDescription="Добавить коллекцию"
                            android:text="+"
                            android:textAllCaps="false"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/btnDeleteSayCollection"
                            android:layout_width="60sp"
                            android:layout_height="wrap_content"
                            android:background="#A3ED3A3A"
                            android:contentDescription="Удалить коллекцию"
                            android:text="-"
                            android:textAllCaps="false"
                            android:textSize="20sp" />

                    </LinearLayout>

                </LinearLayout>

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.45"
                    android:orientation="vertical">

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_columnSpan="2"
                        android:text="Фразы:"
                        android:textColor="#000"
                        android:textSize="20sp" />

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:weightSum="1">

                        <Button
                            android:id="@+id/btnAddSayWord"
                            android:layout_width="60sp"
                            android:layout_height="wrap_content"
                            android:background="#9F37D71B"
                            android:contentDescription="Добавить фразу в коллекцию"
                            android:text="+"
                            android:textAllCaps="false"
                            android:textSize="20sp" />

                        <Button
                            android:id="@+id/btnDeleteSayWord"
                            android:layout_width="60sp"
                            android:layout_height="wrap_content"
                            android:background="#A3ED3A3A"
                            android:contentDescription="Удалить фразу из коллекции"
                            android:text="-"
                            android:textAllCaps="false"
                            android:textSize="20sp" />
                    </LinearLayout>

                </LinearLayout>


            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="0.82"
                android:orientation="horizontal">

                <ScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="5sp"
                    android:layout_weight="0.25">

                    <LinearLayout
                        android:id="@+id/linearCollections"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical">


                    </LinearLayout>
                </ScrollView>

                <ScrollView
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.48">

                    <GridLayout
                        android:id="@+id/gridWords"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">

                    </GridLayout>
                </ScrollView>
            </LinearLayout>

        </LinearLayout>

    </LinearLayout>
</layout>